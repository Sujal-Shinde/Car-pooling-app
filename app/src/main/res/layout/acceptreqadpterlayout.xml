<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"

    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Source"
        android:id="@+id/textView25"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="lblSource"
        android:id="@+id/txtRLSource"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:textColor="#142a7a" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Destination"
        android:id="@+id/textView26"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="lblDestination"
        android:id="@+id/txtRLDestination"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:textColor="#142a7a" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Status"
            android:id="@+id/txtAccept"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:textColor="#2e0644" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="txtAccept"
            android:id="@+id/txtAcceptstu"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/txtAccept"
            android:layout_marginLeft="50dp"
            android:textColor="#2e0644" />
    </RelativeLayout>

</LinearLayout>
