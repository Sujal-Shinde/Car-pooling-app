<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RiderHome"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rider"
        android:id="@+id/textView13"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="15dp"
        android:textIsSelectable="false"
        android:textSize="25dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Create Ride"
        android:id="@+id/btnCRider"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        android:background="#110d56"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="View Request"
        android:id="@+id/btnViewRiderReq"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        android:background="#116184"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Start Ride"
        android:id="@+id/btnViewStrtRide"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        android:background="#8c0002"
        android:textColor="#FFFFFF" />

</LinearLayout>
